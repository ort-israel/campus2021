{{!
    @template theme_classic_philosophy/header

    This template renders the header.

    Example context (json):
    {
        "contextheader": "context_header_html",
        "hasnavbar": false,
        "navbar": "navbar_if_available",
        "courseheader": "course_header_html"
    }
}}
<header id="page-header" class="row">
    <div class="col-12 pt-3 pb-3">
        <div class="card {{^contextheader}}border-0 bg-transparent{{/contextheader}}">
            <div class="card-body {{^contextheader}}p-2{{/contextheader}}">
                <div class="d-flex">
                    <div class="mr-auto d-flex philosophy-title">
                        {{{contextheader}}}
                    </div>
                    <div class="logos d-flex align-content-start justify-content-center flex-wrap">
                        {{{logos}}}
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex flex-wrap header-bottom">
            <div class="d-flex">
                {{{pageheadingbutton}}}
            </div>
        </div>
    </div>
</header>